extends layout

block content
  div
    h1 Veckans mat
    main
      form(name="register-form", action="/register", method="post")
        h2 Skapa konto och gör din första matsedel:
        p
          label Användarnamn:
          input(type="text", name="username")
        p
          label Lösenord:
          input(type="text", name="password")
        p
          label Förnamn:
          input(type="text", name="firstname")
        p
          label Efternamn:
          input(type="text", name="lastname")
        p
          input(type="submit", value="Registrera konto")
      form(name="login-form", action="/login", method="post")
        h2 Logga in till existerande konto:
        p
          label Användarnamn:
          input(type="text", name="username")
        p
          label Lösenord:
          input(type="text", name="password")
        p
          input(type="submit", value="Logga in")
      form(name="logout-form", action="/logout", method="get")
        h2 Logga ut från existerande konto:
        p
          input(type="submit", value="Logga ut")
      form(name="dish-form", action="/dishes", method="post")
        h2 Gör din första matsedel:
        p
          input(type="text", placeholder="Namn", name="name")
          input(type="text", placeholder="Sökord", name="keywords")
          input(type="text", placeholder="Var finns receptet?", name="found_at")
        p
          input(type="submit", value="Lägg till maträtt")
        h2 Mina sökord:
        ul
          each dish in dishes
            li
              - for (var i = 0; i < dish.keywords.length; i++)
                  p #{dish.keywords[i]}        
